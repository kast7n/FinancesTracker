<div class="modal fade" id="addAccountModal" tabindex="-1" aria-labelledby="addAccountModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content rounded-4 bg-dark text-light border-0">
      <div class="modal-header border-0" style="background:#23272b;">
        <h5 class="modal-title" id="addAccountModalLabel">Add Account</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form id="addAccountForm">
        <div class="modal-body">
          <div class="mb-3">
            <label for="accountName" class="form-label">Name</label>
            <input type="text" class="form-control rounded-pill bg-dark text-light border-secondary" id="accountName" name="Name" required maxlength="100">
          </div>
          <div class="mb-3">
            <label for="accountBalance" class="form-label">Balance</label>
            <input type="number" class="form-control rounded-pill bg-dark text-light border-secondary" id="accountBalance" name="Balance" min="0" step="0.01" required>
          </div>
          <div class="mb-3">
            <label for="accountCurrency" class="form-label">Currency</label>
            <select class="form-select rounded-pill bg-dark text-light border-secondary" id="accountCurrency" name="Currency" required>
              <option value="LBP">LBP</option>
              <option value="USD">USD</option>
              <option value="EUR">EUR</option>
            </select>
          </div>
        </div>
        <div class="modal-footer border-0" style="background:#23272b;">
          <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary rounded-pill">Add Account</button>
        </div>
      </form>
    </div>
  </div>
</div>
