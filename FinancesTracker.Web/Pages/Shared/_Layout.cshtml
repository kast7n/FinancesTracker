@* _Layout.cshtml for a modern dark-themed finance tracker with a fixed sidebar *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinancesTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Head", required: false)
</head>
<body>
    <button class="sidebar-toggle d-lg-none" id="sidebarToggle"><i class="bi bi-list"></i></button>
    <nav class="sidebar d-flex flex-column p-3" id="sidebar">
        <div class="sidebar-header mb-4">
            <i class="bi bi-cash-coin me-2"></i> FinancesTracker
        </div>
        <ul class="nav flex-column mb-auto">
            <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Index" ? "active" : "")" href="/"> <i class="bi bi-speedometer2"></i> Dashboard</a></li>
            <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Accounts") == true ? "active" : "")" href="/Accounts"> <i class="bi bi-wallet2"></i> Accounts</a></li>
            <li class="nav-item"><a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Transactions") == true ? "active" : "")" href="/Transactions"> <i class="bi bi-arrow-left-right"></i> Transactions</a></li>
        </ul>
        <div class="mt-auto small text-secondary ps-1 pt-4">&copy; @DateTime.Now.Year FinancesTracker</div>
    </nav>
    <main class="main-content">
        @RenderBody()
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/layout.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>